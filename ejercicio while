#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;


void main ()

{
  float Parcial1,Parcial2,Parcial3,Practica,Final,Notafinal;
  do 
  { 
	  cout<<"ingrese Parcial1";
	  cin>>Parcial1;
  }

  while ((Parcial1>100||Parcial1<0)&&(Parcial1!=-99));

  while (Parcial1!=-99)
  {
    do
	{ 
		cout<<"ingrese Parcial2";
		cin>>Parcial2;
	}
	while ((Parcial2>100||Parcial2<0));

	do 
	{ 
		cout<<"ingrese Parcial3";
		cin>>Parcial3;

	}
	while(Parcial3>100||Parcial3<0);
	do
	{
		cout<<"ingrese Practica";
		cin>>Practica;

	}
	while(Practica>100||Practica<0);
	do 
	{
		cout<<"ingrese Final";
		cin>>Final;
	}
	while(Final>100||Final<0);

	Notafinal=(Parcial1+Parcial2+Parcial3)/3*0.4+Practica*0.2+Final*0.4;
	cout<<"Nota final"<<Notafinal;

	do
	{ 
	  cout<<"ingrese Parcial1";
	  cin>>Parcial1;
    }

    while ((Parcial1>100||Parcial1<0)&&(Parcial1!=-99));
  }
  getch();


	 
  
}

